<div id="content"></div>

  <div class="twit">
    <div class="user">
      <img src="https://api.adorable.io/avatars/{{avatar}}" alt="" class="user-avatar">
      <div class="user-fullname">{{user-fullname}}</div>
      <div class="user-username">{{user-username}}</div>
    </div>
    <div class="twit-text">
      {{twit-text}} {{twit-number}}/{{twit-total}}
    </div>
    <time class="twit-time">
      {{twit-time}}
    </time>
    <div class="twit-stats">
      <div class="retwits-and-likes">
        <strong>{{retwits}}</strong>
        <span>Retwit</span>
        <strong>{{loves}}</strong>
        <span>Likes</span>
      </div>
      <div class="twit-stat-avatars">
        <img src="https://api.adorable.io/avatars/80/abott@adorable.png" alt="">
        <img src="https://api.adorable.io/avatars/80/bob@adorable.png" alt="">
        <img src="https://api.adorable.io/avatars/80/jimmy@adorable.png" alt="">
        <img src="https://api.adorable.io/avatars/80/bill@adorable.png" alt="">
        <img src="https://api.adorable.io/avatars/80/blaine@adorable.png" alt="">
        <img src="https://api.adorable.io/avatars/80/dee@adorable.png" alt="">
      </div>
    </div>
    <div class="twit-actions">
      <span>🗯</span>
      <strong>{{comments}}</strong>
      
      <span>♽</span>
      <strong>{{retwits}}</strong>
      
      <span>♥︎</span>
      <strong>{{loves}}</strong>
      
      <span>✉️</span>
    </div>
  </div>

  <div class="twit thread-twit">
    <div class="user">
      <img src="https://api.adorable.io/avatars/{{avatar}}" alt="" class="user-avatar">
      <div class="user-fullname">
        {{user-fullname}}
        <span class="user-username">{{user-username}}</span>
        <time class="time-ago">
          &middot;
          1h
        </time>
      </div>
      <div class="replying-to">
        Replying to <a href="#0" class="user-username">{{user-username}}</a>
      </div>
    </div>
    <div class="twit-text">
      {{twit-text}} {{twit-number}}/{{twit-total}}
    </div>
    
    <div class="twit-actions">
      <span>🗯</span>
      <strong>{{comments}}</strong>
      
      <span>♽</span>
      <strong>{{retwits}}</strong>
      
      <span>♥︎</span>
      <strong>{{loves}}</strong>
      
      <span>✉️</span>
    </div>
  </div>

