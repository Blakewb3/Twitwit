<div class="row justify-content-around">
  <div class='col-12 col-md-9'>
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row justify-content-around" class="abc">
  <div class='col-md-6' >
    <h3>Twit to the world:</h3>

    <form class='form new-project-form'>
      <div class='form-group'>
        <label for='project-name'>Twit name:</label>
        <input class='form-input' type='text' id='project-name' name='project-name' />
      </div>
      <div class='form-group'>
        <label for='project-desc'>What's on your mind?</label>
        <input class='form-input' type='text' id='project-desc' name='project-desc' />
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Twit</button>
      </div>
    </form>
  </div>

  <div class='col-md-6' class='project-list'>
    <h3 class="card-header">Your Twits:</h3>
    {{#each projects as |project|}}
    <div class='row mb-2'class="card-body">
      <div class="card-body">
        <h4><a href='/project/{{project.id}}'>{{project.name}}</a></h4>
      </div>
      <div class='col-md-4'>
        <button class='btn btn-sm btn-danger' data-id='{{project.id}}'>DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>

  <script src='./js/profile.js'></script>